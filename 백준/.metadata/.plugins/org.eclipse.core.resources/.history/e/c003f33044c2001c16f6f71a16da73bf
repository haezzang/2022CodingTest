package _2007³â;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
	
		
		Scanner scan = new Scanner(System.in);



	
			int kg=scan.nextInt();
			int cnt=0;
			int sum=0;
			while(true) {
	
				if(kg==sum) break;
				if(kg>sum+5) { sum+=5; cnt++;}
				else { sum+=3; cnt++;}
				
				
			}
		
			System.out.println(cnt);

	
	}

}
